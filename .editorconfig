# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[*.{h,hpp,c,cpp}]
indent_style = space
indent_size = 4
max_line_length = 100

[*.py]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
